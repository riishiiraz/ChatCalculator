<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingTop="5dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="0dp"
        android:id="@+id/constraint_layout_recieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_recieve_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <TextView
            android:id="@+id/tv_recieve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxEms="8"
            android:paddingTop="5dp"
            android:text="Helo I am \nraj how Are You"
            android:textSize="20dp"
            android:textColor="#000"
            app:layout_constraintEnd_toEndOf="@id/constraint_layout_recieve"
            app:layout_constraintStart_toStartOf="@id/constraint_layout_recieve"
            app:layout_constraintTop_toTopOf="@id/constraint_layout_recieve"

            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.095">

        </TextView>

        <TextView
            android:id="@+id/tv_recieve_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20:33"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_recieve"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/tv_recieve"
            app:layout_constraintTop_toBottomOf="@+id/tv_recieve">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>